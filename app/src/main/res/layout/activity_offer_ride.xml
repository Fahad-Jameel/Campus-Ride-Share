<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/home_surface_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.Campus.IconButton.Surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_back"
            app:icon="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/offer_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mapPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg_map_placeholder"
                android:contentDescription="@string/content_description_map_preview"
                android:scaleType="centerCrop" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/home_surface_card"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <org.osmdroid.views.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@drawable/bg_login_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_start_hint"
                            android:src="@drawable/ic_location_pin" />

                        <EditText
                            android:id="@+id/pickupInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:hint="@string/offer_start_hint"
                            android:background="@android:color/transparent"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectPickupButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map"
                            android:textColor="@color/home_badge_green_text"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_destination_hint"
                            android:src="@drawable/ic_destination" />

                        <EditText
                            android:id="@+id/destinationInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:hint="@string/offer_destination_hint"
                            android:background="@android:color/transparent"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:inputType="text"
                            android:textSize="16sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectDestinationButton"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map"
                            android:textColor="@color/home_badge_green_text"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_date_hint"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/dateButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/offer_date_hint"
                            android:textColor="@color/login_text_primary"
                            android:clickable="true"
                           android:focusable="true"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_time_hint"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:id="@+id/timeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/offer_time_hint"
                            android:textColor="@color/login_text_primary"
                            android:clickable="true"
                            android:focusable="true"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_login_input_field"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Expiry Time"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/expiryTimeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Expiry Time (Optional)"
                        android:textColor="@color/login_text_primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_seats_hint"
                            android:src="@drawable/ic_seats" />

                        <EditText
                            android:id="@+id/seatsInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:hint="@string/offer_seats_hint"
                            android:background="@android:color/transparent"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:inputType="number"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/offer_cost_hint"
                            android:src="@drawable/ic_wallet" />

                        <EditText
                            android:id="@+id/costInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:hint="@string/offer_cost_hint"
                            android:background="@android:color/transparent"
                            android:textColor="@color/login_text_primary"
                            android:textColorHint="@color/login_text_secondary"
                            android:inputType="numberDecimal"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_login_input_field"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/offer_note_hint"
                        android:src="@drawable/ic_shield_info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="@string/offer_note_hint"
                        android:textColor="@color/login_text_primary"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_login_input_field"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_summary_route"
                        android:textColor="@color/login_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/summaryRoute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/sample_summary_route"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/offer_summary_datetime"
                                android:textColor="@color/login_text_secondary" />

                            <TextView
                                android:id="@+id/summaryDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_summary_datetime"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/offer_summary_seats"
                                android:textColor="@color/login_text_secondary" />

                            <TextView
                                android:id="@+id/summarySeats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_summary_seats"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/offer_summary_cost"
                                android:textColor="@color/login_text_secondary" />

                            <TextView
                                android:id="@+id/summaryCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_summary_cost"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/postRideButton"
                    style="@style/Widget.Campus.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:text="@string/offer_post_cta"
                    app:icon="@drawable/ic_nav_offer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/offerSosButton"
                    style="@style/Widget.Campus.Button.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_sos"
                    app:icon="@drawable/ic_sos" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/Widget.Campus.BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:itemIconSize="24dp"
        app:menu="@menu/menu_bottom_nav" />

</LinearLayout>

