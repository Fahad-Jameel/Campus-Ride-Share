<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/home_surface_card"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Passenger Info -->
        <TextView
            android:id="@+id/passengerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/passengerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="john@example.com"
            android:textSize="14sp"
            android:textColor="@color/login_text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Ride Details -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_text_secondary"
            android:alpha="0.3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/rideRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Pickup â†’ Destination"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/stopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop: Main Gate"
            android:textSize="13sp"
            android:textColor="@color/login_text_secondary"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/seatsRequested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 seat(s)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/home_price_green"
            android:layout_marginTop="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectButton"
                style="@style/Widget.Campus.Button.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="@color/white"
                android:backgroundTint="#F44336"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptButton"
                style="@style/Widget.Campus.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
